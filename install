#!/bin/bash

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
USER=vitor

# pacman 
bash ${BASEDIR}/pacman/install.sh

# gitfiles
ln -sf ${BASEDIR}/gitfiles/gitconfig /home/$USER/.gitconfig

# ntp.br
sudo bash ${BASEDIR}/ntp/install.sh

# vimfiles
ln -sf ${BASEDIR}/vim /home/$USER/.vim
vim -c 'PluginInstall' -c 'qa!'

# zsh
bash ${BASEDIR}/zshrc/install.sh
rm ~/.zshrc
ln -sf ${BASEDIR}/zshrc/zshrc /home/$USER/.zshrc

# config directory
ln -sf ${BASEDIR}/.config /home/$USER/.config

# local user share applications
ln -sf ${BASEDIR}/.local/share/applications /home/$USER/.local/share/applications

# archlinux 
bash ${BASEDIR}/archlinux/post-installation.sh $USER

# pacaur using other user
su -u $USER -c 'bash ${BASEDIR}/pacaur/install.sh'

# xresources
ln -sf ${BASEDIR}/Xresources /home/$USER/.Xresources
