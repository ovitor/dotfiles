#!/bin/bash

INTERNAL_MONITOR=eDP-1
EXTERNAL_MONITOR=DP-2-2
INTERNAL_MONITOR_MODE=1920x1080
EXTERNAL_MONITOR_MODE=3840x2160

if [ $1 -eq 1 ]
then
  xrandr \
    --output $INTERNAL_MONITOR --off \
    --output $EXTERNAL_MONITOR --primary --mode $EXTERNAL_MONITOR_MODE  --pos 1920x0 --rotate normal
  sh ~/.config/polybar/launch.sh
  feh --bg-fill ~/.dotfiles/wallpaper/wallpaper.jpg
  setxkbmap us
  notify-send --app-name "Thinkpad Dock" "Full dock mode activated." 
elif [ $1 -eq 2 ]
then
  xrandr \
    --output $INTERNAL_MONITOR --primary --mode $INTERNAL_MONITOR_MODE --pos 0x0 --rotate normal \
    --output $EXTERNAL_MONITOR --off 
  sh ~/.config/polybar/launch.sh
  feh --bg-fill ~/.dotfiles/wallpaper/wallpaper.jpg
  notify-send --app-name "Thinkpad Dock" "Notebook mode activated." 
fi
